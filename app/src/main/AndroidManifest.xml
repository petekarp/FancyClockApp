<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.karp.javed.fancyclockapp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity

            android:name=".FancyClockActivity"
            android:label="@string/title_activity_fancy_clock" >
        </activity>

        <activity

            android:name=".SimpleClockSettings"
            android:parentActivityName=".MainActivity"
            android:label="@string/title_activity_simple_clock_settings">
        </activity>
    </application>

</manifest>
